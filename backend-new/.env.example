# Environment
NODE_ENV=development
PORT=3000

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database (if using direct connection)
DATABASE_URL=postgresql://postgres:password@localhost:5432/1000ravier

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for OTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for job queues and caching)
REDIS_URL=redis://localhost:6379

# Google Gemini AI (for question generation)
GEMINI_API_KEY=your-gemini-api-key-here
USE_AI_QUESTIONS=false

# AdMob Configuration
ADMOB_APP_ID=ca-app-pub-your-app-id
ADMOB_REWARDED_UNIT_ID=ca-app-pub-your-rewarded-unit-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# App Configuration
APP_NAME=1000ravier
SUPPORT_EMAIL=support@1000ravier.com
FRONTEND_URL=https://1000ravier.com
ADMIN_PANEL_URL=https://admin.1000ravier.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Anti-cheat Configuration
MAX_SUBMISSIONS_PER_MINUTE=10
SUSPICIOUS_SCORE_THRESHOLD=0.95